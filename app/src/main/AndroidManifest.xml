<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sasig.moviedb">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_moviedb_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_moviedb_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.PeopleActivity"
            android:label="@string/title_activity_people"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".view.PeopleFragment"
            android:label="@string/title_activity_people_fragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.ZoomActivity" />
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MovieDetailActivity" />
        <activity android:name=".view.MainActivity" />
    </application>

</manifest>